{
  "extends": "./tsconfig.json",
  "include": ["mcp_server/**/*.ts"],
  "exclude": ["mcp_server/tests", "**/*.test.ts", "**/*.test.tsx"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2020",
    "skipLibCheck": true,
    "noEmitOnError": true
  }
}