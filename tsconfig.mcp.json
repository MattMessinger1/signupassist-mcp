{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": [
    "mcp_server/**/*",
    "providers/**/*",
    "core/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "mcp_server/tests",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
