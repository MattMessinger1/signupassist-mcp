{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node"],

    // ðŸš€ Major speedup with incremental compilation
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",

    "outDir": "./dist"
  },
  "include": ["mcp_server", "providers", "mcp"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.md",
    "mcp_server/tests/**",
    "mcp_server/types/**",
    "mcp_server/ai/AIOrchestrator.ts",
    "scripts/testAIOrchestrator.ts"
  ]
}
