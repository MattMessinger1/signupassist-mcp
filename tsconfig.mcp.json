{
  "extends": "./tsconfig.json",
  "include": ["mcp_server/**/*.ts", "mcp_server/**/*.tsx"],
  "exclude": [
    "mcp_server/tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "mcp_server/lib/browserbase.ts"
  ],
  "compilerOptions": {
    "outDir": "dist/mcp_server",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true
  }
}
