{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,

    // ðŸš€ Major speedup with incremental compilation
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",

    "outDir": "./dist"
  },
  "include": ["mcp_server", "providers", "mcp"],
  "exclude": ["**/*.test.ts", "**/*.test.md", "mcp_server/tests/**"]
}
