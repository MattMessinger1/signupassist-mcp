{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist/scripts",
    "rootDir": ".",
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*.ts",
    "mcp_server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
